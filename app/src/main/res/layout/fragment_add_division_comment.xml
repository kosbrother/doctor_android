<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kosbrother.com.doctorguide.fragments.AddDivisionCommentFragment">

    <Button
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/primary_color_button"
        android:text="下一步"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/doctor_fragment_text_size"
        />
    <ScrollView
        android:layout_above="@+id/next_step"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/grey_pretty_light"
            >
            <TextView
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增評分"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/doctor_fragment_text_size"
                />
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            >
            <TextView
                android:id="@+id/text1"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="環境衛生"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_centerVertical="true"/>
            <kosbrother.com.doctorguide.custom.CustomSlider
                android:id="@+id/division_env_slide"
                android:layout_toRightOf="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </kosbrother.com.doctorguide.custom.CustomSlider>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >
            <TextView
                android:id="@+id/text2"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫療設備"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_centerVertical="true"/>
            <kosbrother.com.doctorguide.custom.CustomSlider
                android:id="@+id/division_equipment_slide"
                android:layout_toRightOf="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </kosbrother.com.doctorguide.custom.CustomSlider>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >
            <TextView
                android:id="@+id/text3"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫護專業"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_centerVertical="true"/>
            <kosbrother.com.doctorguide.custom.CustomSlider
                android:id="@+id/division_spe_slide"
                android:layout_toRightOf="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </kosbrother.com.doctorguide.custom.CustomSlider>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:id="@+id/text4"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服務態度"
                android:layout_centerVertical="true"
                android:textSize="@dimen/doctor_fragment_title_size"/>
            <kosbrother.com.doctorguide.custom.CustomSlider
                android:id="@+id/division_friendly_slide"
                android:layout_toRightOf="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </kosbrother.com.doctorguide.custom.CustomSlider>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/grey_pretty_light"
            >
            <TextView
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增評論"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/doctor_fragment_text_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/div_comment"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="請輸入您寶貴的意見"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>

</RelativeLayout>
