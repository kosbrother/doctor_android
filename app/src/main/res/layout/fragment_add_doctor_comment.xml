<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kosbrother.com.doctorguide.fragments.AddDivisionCommentFragment">

    <Button
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/primary_color_button"
        android:text="完成"
        android:textColor="@color/textColorPrimary"
        />

    <LinearLayout
        android:layout_above="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/grey_pretty_light"
            >
            <TextView
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增評分"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >
            <TextView
                android:id="@+id/text1"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫師態度"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/enviroment_score"
                android:layout_toRightOf="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/check_image"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_check_circle"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/enviroment_score"
                android:layout_toLeftOf="@+id/check_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dsb_min="0"
                    app:dsb_max="5"
                    app:dsb_value="3"
                    android:id="@+id/seekbar"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekbar"
                    android:layout_alignParentLeft="true"
                    android:text="不滿意"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekbar"
                    android:layout_alignParentRight="true"
                    android:text="滿意"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >
            <TextView
                android:id="@+id/text1"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫師專業"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/enviroment_score"
                android:layout_toRightOf="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/check_image"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_check_circle"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/enviroment_score"
                android:layout_toLeftOf="@+id/check_image"
                android:layout_centerVertical="true"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp">
                <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:dsb_min="0"
                    app:dsb_max="5"
                    app:dsb_value="2"
                    android:id="@+id/seekbar"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekbar"
                    android:layout_alignParentLeft="true"
                    android:text="不滿意"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/seekbar"
                    android:layout_alignParentRight="true"
                    android:text="滿意"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp">
            <TextView
                android:id="@+id/text4"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我願意推薦此位醫生"
                android:layout_centerVertical="true"/>
            <RadioGroup
                android:layout_toRightOf="@+id/text4"
                android:id="@+id/rgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <RadioButton
                    android:id="@+id/kyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是" />
                <RadioButton
                    android:id="@+id/twitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否" />
            </RadioGroup>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/grey_pretty_light"
            >
            <TextView
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增評論"
                android:textColor="@color/colorPrimary"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="請輸入您寶貴的意見"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
