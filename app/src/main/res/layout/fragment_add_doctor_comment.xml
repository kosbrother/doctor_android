<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="kosbrother.com.doctorguide.fragments.AddDivisionCommentFragment">

    <Button
        android:id="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/primary_color_button"
        android:text="完成"
        android:textColor="@color/textColorPrimary"
        android:textSize="@dimen/doctor_fragment_text_size"
        />
    <ScrollView
        android:layout_above="@+id/next_step"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/grey_pretty_light"
            >
            <TextView
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增評分"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/doctor_fragment_text_size"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >
            <TextView
                android:id="@+id/text1"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫師態度"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_centerVertical="true"/>
            <kosbrother.com.doctorguide.custom.CustomSlider
                android:id="@+id/friendly_slide"
                android:layout_toRightOf="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </kosbrother.com.doctorguide.custom.CustomSlider>
        </RelativeLayout>
        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            >
            <TextView
                android:id="@+id/text2"
                android:layout_marginRight="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫師專業"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_centerVertical="true"/>
            <kosbrother.com.doctorguide.custom.CustomSlider
                android:id="@+id/spe_slide"
                android:layout_toRightOf="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            </kosbrother.com.doctorguide.custom.CustomSlider>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/text4"
                android:layout_marginLeft="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我願意推薦此位醫生"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_centerVertical="true"/>
            <RadioGroup
                android:layout_toRightOf="@+id/text4"
                android:id="@+id/rgroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <RadioButton
                    android:id="@+id/radio_recommend_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="是" />
                <RadioButton
                    android:id="@+id/radio_recommend_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="否" />
            </RadioGroup>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/grey_pretty_light"
            >
            <TextView
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新增評論"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/doctor_fragment_text_size"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">
            <EditText
                android:id="@+id/dr_comment"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="請輸入您寶貴的意見"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"></View>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>
