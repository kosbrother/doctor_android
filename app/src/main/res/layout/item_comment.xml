<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/cv_item"
    card_view:cardCornerRadius="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/card_overflow"
        android:onClick="showPopup"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="台北市立聯合醫院"
                android:textSize="24dp"
                android:textColor="@color/bluegreen_text_color"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/mText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="對象 : "
                android:textColor="@color/grey_text_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/division"
                android:layout_toRightOf="@+id/mText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家醫科"
                android:textColor="@color/grey_text_color"
                android:layout_centerVertical="true"/>
            <View
                android:id="@+id/divider"
                android:layout_toRightOf="@+id/division"
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@color/grey_text_color"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/doctor"
                android:layout_toRightOf="@+id/divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="趙錢孫 醫師"
                android:textColor="@color/grey_text_color"
                android:layout_centerVertical="true"/>
            <ImageView
                android:id="@+id/awrad"
                android:layout_toRightOf="@+id/doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/award"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/mText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科別滿意度 : "
                android:textColor="@color/grey_text_color"/>
            <TextView
                android:id="@+id/div_score"
                android:layout_toRightOf="@+id/mText3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0"
                android:textColor="@color/grey_text_color"/>
            <RatingBar
                android:id="@+id/div_score_rating"
                android:layout_toRightOf="@+id/div_score"
                android:rating="3.5"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"/>
            <TextView
                android:id="@+id/mText4"
                android:layout_toRightOf="@+id/div_score_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫師滿意度 : "
                android:textColor="@color/grey_text_color"/>
            <TextView
                android:id="@+id/doc_score"
                android:layout_toRightOf="@+id/mText4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0"
                android:textColor="@color/grey_text_color"/>
            <RatingBar
                android:id="@+id/doc_score_rating"
                android:layout_toRightOf="@+id/doc_score"
                android:rating="3.0"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"/>
        </RelativeLayout>
        <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_text_color"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫師評論"
                android:textColor="@color/grey_text_color"/>
            <TextView
                android:id="@+id/comment_time"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015/12/5"
                android:textColor="@color/grey_text_color"/>
            <TextView
                android:id="@+id/textview2"
                android:layout_toLeftOf="@id/comment_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="評論時間 : "
                android:textColor="@color/grey_text_color"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="醫院的服務很用心，非常感謝！但是護士小姐的動作太粗魯，家裡長輩打針的時候，找不到血管，要找……"
            android:textColor="@color/black_text"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="醫師評論"
            android:textColor="@color/grey_text_color"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="趙醫師的問診讓我感覺很窩心，不會像例行公事三兩下就結束，細心又關心病人！！我們家的小孩都是⋯⋯"
            android:textColor="@color/black_text"/>
    </LinearLayout>

</android.support.v7.widget.CardView>