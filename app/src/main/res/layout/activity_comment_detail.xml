<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kosbrother.com.doctorguide.CommentDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/grey_pretty_light"
            >
            <TextView
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="就診資訊"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/doctor_fragment_title_size"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >
                <TextView
                    android:layout_marginRight="8dp"
                    android:id="@+id/comment_time"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015/12/5"
                    android:textColor="@color/grey_text_color"
                    android:textSize="@dimen/comment_score_size"/>
                <TextView
                    android:id="@+id/textview2"
                    android:layout_toLeftOf="@id/comment_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="評論時間 : "
                    android:textColor="@color/grey_text_color"
                    android:textSize="@dimen/comment_score_size"/>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="評論人"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_marginRight="20dp"
                android:textColor="@color/black_text"/>
            <TextView
                android:id="@+id/commentor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="李俊俋"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:textColor="@color/black_text"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">
            <TextView
                android:id="@+id/text8"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="就診醫院"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_marginRight="20dp"
                android:textColor="@color/black_text"/>
            <TextView
                android:layout_toRightOf="@id/text8"
                android:id="@+id/mHostital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="台北市立聯合醫院"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:textColor="@color/black_text"/>
            <TextView
                android:layout_toRightOf="@id/text8"
                android:layout_below="@+id/mHostital"
                android:id="@+id/division"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="家醫科"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:textColor="@color/black_text"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="門診醫師"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_marginRight="20dp"
                android:textColor="@color/black_text"/>
            <TextView
                android:id="@+id/doctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="趙錢孫 醫師"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:textColor="@color/black_text"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp">
            <TextView
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="就醫時間"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:layout_marginRight="20dp"
                android:textColor="@color/black_text"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015/12/10"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:textColor="@color/black_text"/>
        </LinearLayout>



        <LinearLayout
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/grey_pretty_light"
            >
            <TextView
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科別評論"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/doctor_fragment_title_size"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp">
            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="環境衛生"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:textColor="@color/black_text"/>
            <TextView
                android:id="@+id/env_score"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0"
                android:textColor="@color/black_text"
                android:textSize="@dimen/doctor_fragment_title_size"
                />
            <RatingBar
                android:id="@+id/env_rating_bar"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/env_score"
                android:rating="3.5"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫療設備"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:textColor="@color/black_text"/>
            <TextView
                android:id="@+id/equipment_score"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0"
                android:textColor="@color/black_text"
                android:textSize="@dimen/doctor_fragment_title_size"
                />
            <RatingBar
                android:id="@+id/equipment_rating_bar"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/equipment_score"
                android:rating="3.5"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫護專業"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:textColor="@color/black_text"/>
            <TextView
                android:id="@+id/spe_score_div"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3.0"
                android:textColor="@color/black_text"
                android:textSize="@dimen/doctor_fragment_title_size"
                />
            <RatingBar
                android:id="@+id/spe_div_rating_bar"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/spe_score_div"
                android:rating="3.5"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp">
            <TextView
                android:id="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服務態度"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:textColor="@color/black_text"/>
            <TextView
                android:id="@+id/friend_score_div"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/text5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/doctor_fragment_title_size"
                android:text="3.0"
                android:textColor="@color/black_text"
                />
            <RatingBar
                android:id="@+id/friend_div_rating_bar"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/friend_score_div"
                android:rating="3.5"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_divider_color"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="科別評論"
                android:textColor="@color/grey_text_color"
                android:textSize="@dimen/comment_score_size"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/div_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="醫院的服務很用心，非常感謝！但是護士小姐的動作太粗魯，家裡長輩打針的時候，找不到血管，要找……"
                android:textColor="@color/black_text"
                android:textSize="@dimen/doctor_fragment_title_size"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@color/grey_pretty_light"
            >
            <TextView
                android:layout_margin="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫師評論"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/doctor_fragment_title_size"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/awrad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/award"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已推薦"
                    android:textSize="@dimen/comment_score_size"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="醫師態度"
                        android:textSize="@dimen/doctor_fragment_title_size"
                        android:textColor="@color/black_text"/>
                    <TextView
                        android:id="@+id/friend_score"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/text6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.0"
                        android:textSize="@dimen/doctor_fragment_title_size"
                        android:textColor="@color/black_text"
                        />
                    <RatingBar
                        android:id="@+id/friend_rating_bar"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/friend_score"
                        android:rating="3.5"
                        android:stepSize="0.5"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:id="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="醫師專業"
                        android:textSize="@dimen/doctor_fragment_title_size"
                        android:textColor="@color/black_text"/>
                    <TextView
                        android:id="@+id/spe_score"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/text7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3.0"
                        android:textSize="@dimen/doctor_fragment_title_size"
                        android:textColor="@color/black_text"
                        />
                    <RatingBar
                        android:id="@+id/spe_rating_bar"
                        android:layout_marginLeft="4dp"
                        android:layout_toRightOf="@+id/spe_score"
                        android:rating="3.5"
                        android:stepSize="0.5"
                        android:numStars="5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

        <View
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_divider_color"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="醫師評論"
                android:textColor="@color/grey_text_color"
                android:textSize="@dimen/comment_score_size"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/dr_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="趙醫師的問診讓我感覺很窩心，不會像例行公事三兩下就結束，細心又關心病人！！我們家的小孩都是⋯⋯"
                android:textColor="@color/black_text"
                android:textSize="@dimen/doctor_fragment_title_size"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
