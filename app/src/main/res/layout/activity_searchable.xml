<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    tools:context="kosbrother.com.doctorguide.SearchableActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_pretty_light"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/searchable_doctor"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/doctorListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_pretty_light"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:text="@string/searchable_hospital"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/hospitalListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>