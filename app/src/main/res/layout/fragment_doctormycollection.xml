<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/doctor_list_height"
    android:clickable="true"
    android:background="@drawable/click_selector"
    >

    <ImageView
        android:id="@+id/head_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/head"
        android:layout_marginLeft="16dp"
        android:layout_centerVertical="true"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_toRightOf="@+id/head_image"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_divider_color"></View>
    <Button
        android:background="@drawable/heart_read_to_white_button"
        android:id="@+id/heart"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/head_image"
        android:layout_toLeftOf="@+id/heart"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/doctor_name"
            android:text="吳三玲 醫師"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            />

        <TextView
            android:id="@+id/hospial_name"
            android:layout_below="@+id/doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="台北市立聯合醫院"
            android:textSize="14sp"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#9b9b9b"/>
    </RelativeLayout>
</RelativeLayout>

